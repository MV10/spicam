{
  "name": "Front Door",
  "localpath":  "/media/ramdisk/",
  "storagepath": "/media/nas_dvr/spicam/frontdoor/",

  "camera": {
    "width": 1296,
    "height": 972,
    "mode": 4,
    "fps": 24
  },

  "email": {
    "server": "localhost:25",
    "from": "appsettings.secrets.json",
    "to": "appsettings.secrets.json",
    "cooldownSeconds": 90,
    "max24hrs": 100
  },

  "motion": {
    "maskPathname": "",
    "testFrameInterval": 3,
    "testFrameCooldown": 3,
    "rgbThreshold": 200,
    "cellPercentage": 50,
    "cellCount": 20
  },

  "recording": {
    "mininumRecordTimeSecs": 10,
    "motionEndedThresholdSecs": 5,
    "segmentRecordingSecs": 30,
    "maximumRecordTimeMin": 10,
    "maximumReachedCooldownMin": 30
  }
}
